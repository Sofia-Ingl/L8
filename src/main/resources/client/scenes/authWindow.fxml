<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="486.0" style="-fx-background-color: #ffd8ad;"
            xmlns="http://javafx.com/javafx/8.0.292" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.LoginSceneController">
    <StackPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
               AnchorPane.topAnchor="10.0">
        <GridPane hgap="10.0" prefHeight="254.0" prefWidth="410.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <ImageView fx:id="image" fitHeight="124.0" fitWidth="118.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"
                       GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                <Image url="@../images/34.png"/>
            </ImageView>
            <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="190.0"
                       style="-fx-border-width: 1; -fx-border-color: #777571;" GridPane.columnIndex="1"
                       GridPane.columnSpan="3" GridPane.rowIndex="1"/>
            <Label fx:id="usernameLabel" text="Username:" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                   GridPane.vgrow="SOMETIMES">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </Label>
            <Label fx:id="passwordLabel" text="Password:" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                   GridPane.vgrow="SOMETIMES">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="190.0"
                           style="-fx-border-width: 1; -fx-border-color: #777571;" GridPane.columnIndex="1"
                           GridPane.columnSpan="3" GridPane.rowIndex="2"/>
            <CheckBox fx:id="registerCheckBox" mnemonicParsing="false" text="Register" GridPane.columnIndex="1"
                      GridPane.halignment="LEFT" GridPane.rowIndex="3"/>
            <Button fx:id="signInButton" mnemonicParsing="false" prefHeight="26.0"
                    prefWidth="188.0"
                    style="-fx-background-color: #ffbd75; -fx-border-color: #777571; -fx-border-width: 1;"
                    text="Sign in" GridPane.columnIndex="2" GridPane.columnSpan="2"
                    GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
            <Label fx:id="connectionLabel" text="IsConnected..." GridPane.columnIndex="3" GridPane.halignment="RIGHT"
                   GridPane.rowIndex="4"/>
        </GridPane>
    </StackPane>

</AnchorPane>
